<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/augment_screen_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_10"
    android:background="@drawable/augment_screen_frame"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_40"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/ar_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/assistant_semibold"
            android:gravity="center"
            android:padding="@dimen/margin_40"
            android:text="You are about to load an Augment Camera. Please be patient while the Resources are being loaded"
            android:textAlignment="center"
            android:textColor="@color/primary_darker"
            android:textSize="@dimen/text_tab_large"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ar_note_text"
            android:fontFamily="@font/assistant_semibold"
            android:gravity="center"
            android:padding="@dimen/margin_40"
            android:text="WATCH"
            android:textAlignment="center"
            android:textColor="@color/primary_darker"
            android:textSize="@dimen/text_tab_xxlarge"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timer_text"
            android:layout_margin="@dimen/margin_6"
            android:background="@color/transparent"
            android:fontFamily="@font/overlock_sc"
            android:gravity="center"
            android:padding="@dimen/margin_6"
            android:text="Start"
            android:textAlignment="center"
            android:textSize="@dimen/text_tab_small" />

        <TextView
            android:id="@+id/ar_progress_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/assistant_semibold"
            android:gravity="center"
            android:padding="@dimen/margin_40"
            android:text="Camera is being configured..."
            android:textAlignment="center"
            android:textColor="@color/primary_darker"
            android:textSize="@dimen/text_tab_medium"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_40"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/gifimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</LinearLayout>